package PracticeDiary_1;

import java.util.Scanner;

public class code_4_1_practice {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.print("请输入你的成绩:");
        int grade = scan.nextInt();
        if (grade == 100) {
            System.out.println("You get a BMW!");
        } else if (80 < grade && grade <= 99) {
            System.out.println("You get an IPhone XS Max!");
        } else if (60 < grade && grade <= 80) {
            System.out.println("You get an iPad!");
        } else {
            System.out.println("You get Nothing!");
        }
    }
}
